{
    "root": true,
    "env": {
        "browser": false,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:eslint-plugin/recommended",
        "plugin:node/recommended-module"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "settings": {
      "node": {
        "tryExtensions": [".ts"]
      }
    },
    "rules": {
    },
    "ignorePatterns": ["src/**/*.test.ts", "jest.config.js", "rollup.config.js", "dist/*.js"]
}
